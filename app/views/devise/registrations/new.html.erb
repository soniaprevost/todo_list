<div class="bg-black mini-height">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-3">
        <div class="bg-white card">
          <div class="margin-space text-center">
            <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-lg btn-facebook" do %>
              <i class="fa fa-facebook padded-right"></i>Sign in with facebook
            <% end %>
          </div>
          <div class="text-center padded-small">
            OR
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs padded-left padded-right">
              <%= f.input :email, required: true, autofocus: true, placeholder: "your email address", label: false %>
              <%= f.input :password, required: true, placeholder: "your password ", label: false, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
              <%= f.input :password_confirmation, placeholder: "confirm your password", label: false, required: true %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Sign up", class: "btn btn-success" %>
            </div>
          <% end %>

          <div class="text-center padded-small">
            Already registered ?
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-default" %><br />
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
